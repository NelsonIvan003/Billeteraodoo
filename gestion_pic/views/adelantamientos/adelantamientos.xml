<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id='gestion_pic_adelantamientos_action' model='ir.actions.act_window'>
            <field name="name">Adelantamientos</field>
            <field name="res_model">gestion_pic.cupones</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Gestion de Adelantamientos"
                  id="gestion_pic_promociones_menu"
                  parent="gestion_pic_cupones_menu"
                  action="gestion_pic_adelantamientos_action"/>


        <!-- Form View -->
    <record id="cupones_view_form" model="ir.ui.view">
        <field name="name">Crear Cup√≥n</field>
        <field name="model">gestion_pic.cupones</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="detalleCompra"/>
                            <field name="idComercio" widget="many2one_tags"/>
                            <field name="idBanco"  widget="many2one_tags"/>
                        </group>
                        <group>
                            <field name="importeTotal"/>
                            <field name="importeImpuesto"/>
                            <field name="fechaVenta"/>
                        </group>
                        <group>
                            <field name="fechaCompra"/>
                            <field name="idDuenio"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- end form -->

    <!-- Tree View -->
     <record id="promociones_view_tree" model="ir.ui.view">
        <field name="name">Lista de Cupones</field>
        <field name="model">gestion_pic.cupones</field>
        <field name="arch" type="xml">
            <tree>
                <field name="detalleCompra"/>
                <field name="idComercio"/>
                <field name="idBanco"/>
                <field name="importeTotal"/>
                <field name="importeImpuesto"/>
                <field name="fechaVenta"/>
                <field name="fechaCompra"/>
                <field name="idDuenio"/>
            </tree>
        </field>
    </record>
    <!--fin tree-->

    <!-- inicio search -->
     <record id="promociones_view_search" model="ir.ui.view">
        <field name="name">Buscar Cupones</field>
        <field name="model">gestion_pic.cupones</field>
        <field name="arch" type="xml">
            <search>
                <field name="idBanco"/>
                <field name="idComercio"/>
<!--                 Evaluar un filtro como el ejemplo de sin autor...-->
            </search>
        </field>
    </record>
    <!-- fin search -->



    </data>
</odoo>