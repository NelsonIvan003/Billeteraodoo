<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='gestion_pic_bancos_action' model='ir.actions.act_window'>
        <field name="name">Bancos</field>
        <field name="res_model">gestion_pic.bancos</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Gestion Bancos" id="gestion_pic_bancos_menu" parent="gestion_pic_menu" action="gestion_pic_bancos_action"/>

    <!-- Form View -->
    <record id="bancos_view_form" model="ir.ui.view">
        <field name="name">Crear Banco</field>
        <field name="model">gestion_pic.bancos</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="idBanco"/>
                            <field name="banco"/>
                            <field name="descripcion"/>
                            <field name="razonSocial"/>
                        </group>
                        <group>
                            <field name="domicilio"/>
                            <field name="localidad"/>
                            <field name="telefono"/>
                            <field name="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- end form -->

    <!-- Tree View -->
     <record id="bancos_view_tree" model="ir.ui.view">
        <field name="name">Lista de Bancos</field>
        <field name="model">gestion_pic.bancos</field>
        <field name="arch" type="xml">
            <tree>
                <field name="idBanco"/>
                <field name="banco"/>
                <field name="descripcion"/>
                <field name="razonSocial"/>
                <field name="domicilio"/>
                <field name="localidad"/>
                <field name="telefono"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
    <!--fin tree-->

    <!-- inicio search -->
     <record id="bancos_view_search" model="ir.ui.view">
        <field name="name">Buscar Bancos</field>
        <field name="model">gestion_pic.bancos</field>
        <field name="arch" type="xml">
            <search>
                <field name="banco"/>
                <field name="localidad"/>
<!--                 Evaluar la necesidad de mas filtros sobre los bancos...-->
            </search>
        </field>
    </record>
    <!-- fin search -->

</odoo>